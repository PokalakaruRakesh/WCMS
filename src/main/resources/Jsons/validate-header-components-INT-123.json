{
  "INT-123": {
    "TestCaseID": "INT-123",
    "TestCaseName": "valiadate header components",
    "Priority": "Medium",
    "Type": "N/A",
    "Objective": "No Objective specified",
    "ExpectedResult": "User should be able to see the header components successfully",
    "Locators": [
      {
        "name": "HeaderLogo",
        "description": "ASTM logo in the header",
        "locatorType": "xpath",
        "locatorValue": "//header//img[@alt='ASTM Logo']"
      },
      {
        "name": "MainNavigationMenu",
        "description": "Main navigation menu bar",
        "locatorType": "cssSelector",
        "locatorValue": "header nav.main-menu"
      },
      {
        "name": "SearchIcon",
        "description": "Search icon/button in the header",
        "locatorType": "xpath",
        "locatorValue": "//header//button[contains(@class,'search')]"
      },
      {
        "name": "LoginButton",
        "description": "Login button in the header",
        "locatorType": "cssSelector",
        "locatorValue": "header .login-btn"
      },
      {
        "name": "LanguageSelector",
        "description": "Language selector dropdown",
        "locatorType": "xpath",
        "locatorValue": "//header//select[@name='language']"
      }
    ],
    "EdgeCases": [
      {
        "scenario": "Viewport width at minimum supported (mobile)",
        "viewport": "320x568",
        "expected": "Header components are visible and accessible in mobile layout. Navigation menu collapses to hamburger."
      },
      {
        "scenario": "Viewport width at maximum supported (desktop)",
        "viewport": "1920x1080",
        "expected": "Header components are visible and spread across the header as per desktop layout."
      },
      {
        "scenario": "User not logged in",
        "viewport": "default",
        "expected": "Login button is visible. User-specific menu is not displayed."
      },
      {
        "scenario": "User logged in",
        "viewport": "default",
        "expected": "Login button is replaced by user profile/menu."
      },
      {
        "scenario": "Header fails to load",
        "viewport": "default",
        "expected": "Test should fail and log missing header components."
      }
    ],
    "BoundaryValues": [
      {
        "scenario": "Navigation menu with minimum items",
        "menuItems": 1
      },
      {
        "scenario": "Navigation menu with maximum items",
        "menuItems": 10
      }
    ]
  }
}
