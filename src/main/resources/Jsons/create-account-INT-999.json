{
  "INT-999": {
    "TestCaseID": "INT-999",
    "TestCaseName": "Create account",
    "Priority": "Medium",
    "Type": "Functional",
    "Objective": "To verify the account creation process with valid and invalid inputs",
    "ExpectedResult": "Account should be created successfully and confirmation message displayed",
    "PostConditions": "Account is created and user is logged in",
    "Locators": [
      {
        "name": "First Name Field",
        "description": "Input field for user's first name",
        "locatorType": "id",
        "locatorValue": "firstName"
      },
      {
        "name": "Last Name Field",
        "description": "Input field for user's last name",
        "locatorType": "id",
        "locatorValue": "lastName"
      },
      {
        "name": "Email Field",
        "description": "Input field for user's email address",
        "locatorType": "id",
        "locatorValue": "email"
      },
      {
        "name": "Password Field",
        "description": "Input field for user's password",
        "locatorType": "id",
        "locatorValue": "password"
      },
      {
        "name": "Create Account Button",
        "description": "Button to submit account creation form",
        "locatorType": "id",
        "locatorValue": "createAccountBtn"
      }
    ],
    "TestData": {
      "ValidInputs": {
        "firstName": "John",
        "lastName": "Doe",
        "email": "john.doe+test@example.com",
        "password": "Password123!"
      },
      "InvalidInputs": [
        {
          "scenario": "Empty Fields",
          "firstName": "",
          "lastName": "",
          "email": "",
          "password": "",
          "expectedError": "All fields are required."
        },
        {
          "scenario": "Invalid Email Format",
          "firstName": "Jane",
          "lastName": "Smith",
          "email": "jane.smith@invalid",
          "password": "Password123!",
          "expectedError": "Please enter a valid email address."
        },
        {
          "scenario": "Weak Password",
          "firstName": "Alice",
          "lastName": "Brown",
          "email": "alice.brown@example.com",
          "password": "123",
          "expectedError": "Password must be at least 8 characters and include a number and special character."
        },
        {
          "scenario": "Email Already Registered",
          "firstName": "Bob",
          "lastName": "Marley",
          "email": "existing.user@example.com",
          "password": "Password123!",
          "expectedError": "An account with this email already exists."
        }
      ],
      "BoundaryValues": [
        {
          "scenario": "First Name Max Length",
          "firstName": "Aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa", // 50 chars
          "lastName": "Smith",
          "email": "longfirstname@example.com",
          "password": "Password123!",
          "expectedError": null
        },
        {
          "scenario": "Password Min Length",
          "firstName": "Test",
          "lastName": "User",
          "email": "test.user@example.com",
          "password": "Passw1!",
          "expectedError": "Password must be at least 8 characters and include a number and special character."
        }
      ]
    },
    "EdgeCases": [
      {
        "description": "Rapid multiple submissions",
        "expected": "Only one account should be created, and user should see a confirmation message."
      },
      {
        "description": "Whitespace in input fields",
        "expected": "Leading/trailing whitespace should be trimmed."
      },
      {
        "description": "Case sensitivity in email",
        "expected": "Email should be treated as case-insensitive."
      }
    ]
  }
}
